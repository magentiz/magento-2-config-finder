<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="sitemap_generate" instance="Magento\Sitemap\Model\Observer" method="scheduledGenerateSitemaps">
            <schedule>0 0 30 2 *</schedule>
        </job>
        <job name="xtento_xtcore_register_last_cron_execution" instance="Xtento\XtCore\Cron\RegisterCronExecution" method="execute">
            <schedule>0 0 30 2 *</schedule>
        </job>
    </group>
    <group id="backend">
        <job name="monogo_pagespeed_analysis_run" instance="Monogo\PagespeedAnalysis\Cron\Run" method="execute">
            <config_path>pagespeed/general/cron_expr</config_path>
        </job>
        <job name="xtento_xtcore_register_last_cron_execution" instance="Xtento\XtCore\Cron\RegisterCronExecution" method="execute">
            <schedule>*/1 * * * *</schedule>
        </job>
    </group>
</config>
